{"ast":null,"code":"import Header from './Header.vue';\nexport default {\n  name: 'MessagingPage',\n  components: {\n    Header\n  },\n  data() {\n    return {\n      messages: [{\n        id: 1,\n        sender: 'John Doe',\n        content: 'I need help with garbage pickup schedules.',\n        image: 'https://via.placeholder.com/600x400' // Example attached image\n      }, {\n        id: 2,\n        sender: 'Jane Smith',\n        content: 'Thank you for the new schedule!',\n        image: '' // No image attached\n      }, {\n        id: 3,\n        sender: 'Alex Johnson',\n        content: 'Is there a fee for the new garbage bags?',\n        image: 'https://via.placeholder.com/600x400' // Example attached image\n      }],\n      selectedMessage: null,\n      replyContent: '',\n      replyImage: null\n    };\n  },\n  methods: {\n    selectMessage(message) {\n      this.selectedMessage = message;\n      this.replyContent = ''; // Reset reply content\n      this.replyImage = null; // Reset reply image\n    },\n    handleImageUpload(event) {\n      const file = event.target.files[0];\n      if (file) {\n        const reader = new FileReader();\n        reader.onload = e => {\n          this.replyImage = e.target.result; // Save the base64 encoded image\n        };\n        reader.readAsDataURL(file);\n      }\n    },\n    sendReply() {\n      if (!this.replyContent.trim()) {\n        alert('Reply content cannot be empty!');\n        return;\n      }\n\n      // Simulate sending a reply\n      const replyData = {\n        content: this.replyContent,\n        image: this.replyImage\n      };\n      console.log('Reply sent:', replyData);\n      alert('Your reply has been sent!');\n\n      // Reset reply form\n      this.replyContent = '';\n      this.replyImage = null;\n    }\n  }\n};","map":{"version":3,"names":["Header","name","components","data","messages","id","sender","content","image","selectedMessage","replyContent","replyImage","methods","selectMessage","message","handleImageUpload","event","file","target","files","reader","FileReader","onload","e","result","readAsDataURL","sendReply","trim","alert","replyData","console","log"],"sources":["C:\\Users\\darle\\solid-waste-management-system\\src\\components\\MessagePage.vue"],"sourcesContent":["<template>\r\n  <div class=\"space-y-8\">\r\n    <Header />\r\n    <div class=\"max-w-5xl mx-auto p-6 bg-white rounded-lg shadow-md\">\r\n      <h2 class=\"text-xl font-semibold text-gray-800\">Messaging</h2>\r\n\r\n      <div class=\"flex space-x-4\">\r\n        <!-- Sidebar: List of Messages -->\r\n        <div class=\"w-1/3\">\r\n          <div\r\n            v-for=\"message in messages\"\r\n            :key=\"message.id\"\r\n            @click=\"selectMessage(message)\"\r\n            class=\"p-4 border border-gray-300 rounded-lg mb-2 cursor-pointer hover:bg-gray-100\"\r\n          >\r\n            <h3 class=\"text-sm font-semibold text-gray-800\">{{ message.sender }}</h3>\r\n            <p class=\"text-xs text-gray-600 truncate\">{{ message.content }}</p>\r\n          </div>\r\n        </div>\r\n\r\n        <!-- Main Area: Message Details -->\r\n        <div class=\"w-2/3\">\r\n          <div v-if=\"selectedMessage\" class=\"p-4 border border-gray-300 rounded-lg space-y-4\">\r\n            <h3 class=\"text-lg font-semibold text-gray-800\">Message from {{ selectedMessage.sender }}</h3>\r\n            <p class=\"text-sm text-gray-700\">{{ selectedMessage.content }}</p>\r\n\r\n            <!-- Attached Image -->\r\n            <div v-if=\"selectedMessage.image\" class=\"mt-4\">\r\n              <p class=\"text-sm font-medium text-gray-700\">Attached Image:</p>\r\n              <img :src=\"selectedMessage.image\" alt=\"Attached Image\" class=\"w-full h-auto mt-2 rounded-lg\" />\r\n            </div>\r\n\r\n            <!-- Reply Form -->\r\n            <div class=\"mt-6\">\r\n              <h4 class=\"text-md font-semibold text-gray-800\">Reply</h4>\r\n              <textarea\r\n                v-model=\"replyContent\"\r\n                rows=\"3\"\r\n                placeholder=\"Write your reply...\"\r\n                class=\"w-full p-2 border border-gray-300 rounded-lg focus:outline-none focus:ring-2 focus:ring-green-500\"\r\n              />\r\n              <div class=\"mt-2\">\r\n                <label class=\"text-sm font-medium text-gray-700 block mb-1\">Attach Image</label>\r\n                <input\r\n                  type=\"file\"\r\n                  accept=\"image/*\"\r\n                  @change=\"handleImageUpload\"\r\n                  class=\"w-full p-2 border border-gray-300 rounded-lg\"\r\n                />\r\n              </div>\r\n              <button\r\n                class=\"mt-4 px-4 py-2 bg-green-600 text-white rounded-lg hover:bg-green-700 focus:outline-none\"\r\n                @click=\"sendReply\"\r\n              >\r\n                Send Reply\r\n              </button>\r\n            </div>\r\n          </div>\r\n\r\n          <p v-else class=\"text-sm text-gray-600\">Select a message to view its details and reply.</p>\r\n        </div>\r\n      </div>\r\n    </div>\r\n  </div>\r\n</template>\r\n<script>\r\nimport Header from './Header.vue';\r\n\r\nexport default {\r\n  name: 'MessagingPage',\r\n  components: {\r\n    Header,\r\n  },\r\n  data() {\r\n    return {\r\n      messages: [\r\n        {\r\n          id: 1,\r\n          sender: 'John Doe',\r\n          content: 'I need help with garbage pickup schedules.',\r\n          image: 'https://via.placeholder.com/600x400', // Example attached image\r\n        },\r\n        {\r\n          id: 2,\r\n          sender: 'Jane Smith',\r\n          content: 'Thank you for the new schedule!',\r\n          image: '', // No image attached\r\n        },\r\n        {\r\n          id: 3,\r\n          sender: 'Alex Johnson',\r\n          content: 'Is there a fee for the new garbage bags?',\r\n          image: 'https://via.placeholder.com/600x400', // Example attached image\r\n        },\r\n      ],\r\n      selectedMessage: null,\r\n      replyContent: '',\r\n      replyImage: null,\r\n    };\r\n  },\r\n  methods: {\r\n    selectMessage(message) {\r\n      this.selectedMessage = message;\r\n      this.replyContent = ''; // Reset reply content\r\n      this.replyImage = null; // Reset reply image\r\n    },\r\n    handleImageUpload(event) {\r\n      const file = event.target.files[0];\r\n      if (file) {\r\n        const reader = new FileReader();\r\n        reader.onload = (e) => {\r\n          this.replyImage = e.target.result; // Save the base64 encoded image\r\n        };\r\n        reader.readAsDataURL(file);\r\n      }\r\n    },\r\n    sendReply() {\r\n      if (!this.replyContent.trim()) {\r\n        alert('Reply content cannot be empty!');\r\n        return;\r\n      }\r\n\r\n      // Simulate sending a reply\r\n      const replyData = {\r\n        content: this.replyContent,\r\n        image: this.replyImage,\r\n      };\r\n\r\n      console.log('Reply sent:', replyData);\r\n      alert('Your reply has been sent!');\r\n\r\n      // Reset reply form\r\n      this.replyContent = '';\r\n      this.replyImage = null;\r\n    },\r\n  },\r\n};\r\n</script>\r\n<style scoped>\r\n/* Add any custom styles if necessary */\r\n</style>\r\n"],"mappings":"AAkEA,OAAOA,MAAK,MAAO,cAAc;AAEjC,eAAe;EACbC,IAAI,EAAE,eAAe;EACrBC,UAAU,EAAE;IACVF;EACF,CAAC;EACDG,IAAIA,CAAA,EAAG;IACL,OAAO;MACLC,QAAQ,EAAE,CACR;QACEC,EAAE,EAAE,CAAC;QACLC,MAAM,EAAE,UAAU;QAClBC,OAAO,EAAE,4CAA4C;QACrDC,KAAK,EAAE,qCAAqC,CAAE;MAChD,CAAC,EACD;QACEH,EAAE,EAAE,CAAC;QACLC,MAAM,EAAE,YAAY;QACpBC,OAAO,EAAE,iCAAiC;QAC1CC,KAAK,EAAE,EAAE,CAAE;MACb,CAAC,EACD;QACEH,EAAE,EAAE,CAAC;QACLC,MAAM,EAAE,cAAc;QACtBC,OAAO,EAAE,0CAA0C;QACnDC,KAAK,EAAE,qCAAqC,CAAE;MAChD,CAAC,CACF;MACDC,eAAe,EAAE,IAAI;MACrBC,YAAY,EAAE,EAAE;MAChBC,UAAU,EAAE;IACd,CAAC;EACH,CAAC;EACDC,OAAO,EAAE;IACPC,aAAaA,CAACC,OAAO,EAAE;MACrB,IAAI,CAACL,eAAc,GAAIK,OAAO;MAC9B,IAAI,CAACJ,YAAW,GAAI,EAAE,EAAE;MACxB,IAAI,CAACC,UAAS,GAAI,IAAI